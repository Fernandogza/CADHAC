{% extends "base/template.html.twig" %}

{% block content %}
<div class="container">
  <form action="/comunicacion/eventos/edit/{{evento.id}}" method="POST" enctype="multipart/form-data">
    <div class="modal-content">
      <h4>Editar evento</h4>
        <div class="row">
          <div class="input-field col s6">
            <input id="nombre" name="nombre" type="text" class="validate" required value="{{evento.nombre}}">
            <label for="nombre">Nombre</label>
          </div>
          <div class="input-field col s6">
            <input id="descripcion" name="descripcion" type="text" class="validate" required value="{{evento.descripcion}}">
            <label for="descripcion">Descripcion</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="Fecha" name="fecha" id="fecha" type="date" class="datepicker" value="{{evento.fecha}}">
          </div>
        </div>
    </div>
    <div class="modal-footer">
      <button type="submit" class="modal-action waves-effect waves-green btn-flat green white-text">Guardar</button>
      <button type="button" onclick="location.href='/comunicacion/eventos'" class="modal-action waves-effect waves-green btn-flat red white-text">Cancelar</button>
    </div>
  </form>
</div>
{% endblock content %}
{% block customjs %}
{% endblock customjs %}
