{% extends "base/template.html.twig" %}

{% block content %}
<div class="container">
  <h4>Publicaciones</h4>
  <div class="row">
    {% for publicacion in publicaciones %}
    <div class="col s12 m12 l6">
      <div class="card white">
        <div class="card-content">
          <span class="card-title">{{publicacion.titulo}}</span>
          <p>{{publicacion.descripcion}}</p>
        </div>
        <div class="card-action">
          {% if publicacion.ingles %}
            <a class="teal-text " href="/web/publicaciones/{{publicacion.ingles}}">Descargar en ingles</a>
          {% endif %}
          {% if publicacion.espanol %}
            <a class="teal-text " href="/web/publicaciones/{{publicacion.espanol}}">Descargar en espa√±ol</a>
          {% endif %}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock content %}
