{% extends "base/template.html.twig" %}

{% block customcss %}
  <style>
    .card-image {
      height: 200px;
      min-height: 200px;
      width: auto;
      overflow: hidden;
    }
  </style>
{% endblock customcss %}

{% block content %}
<div class="container">
  <div class="row hide-on-small-only">
    <div class="col s12 m6 l6">
      <div class="slider">
        <ul class="slides">
          {% for evento in eventos | slice(0, 2) %}
         <li>
           <img src="/web/media/{{imagenes[loop.index0]}}">
           <div class="caption center-align">
             <h3>{{evento.nombre}}</h3>
           </div>
         </li>
         {% endfor %}
        </ul>
      </div>
    </div>
    <div class="col s12 m6 l6">
      <div class="slider">
        <ul class="slides">
          {% for evento in eventos | slice(2, 4) %}
         <li>
           <img src="/web/media/{{imagenes[loop.index0 + 2]}}">
           <div class="caption center-align">
             <h3>{{evento.nombre}}</h3>
           </div>
         </li>
         {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <h5>Comunicados</h5>
  <div class="row">
    {% for comunicado in comunicados | slice(0, 3) %}
      <div class="col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <img src="/web/comunicados/{{comunicado.imagen}}">
          </div>
          <div class="card-content">
            <span class="card-title truncate"><strong>{{comunicado.titulo}}</strong></span>
            <p class="grey-text">{{comunicado.fecha|date('d M Y')}}</p>
            <p class="truncate">{{comunicado.texto}}</p>
          </div>
          <div class="card-action">
            <a class="green-text" href="/comunicacion/comunicados/{{comunicado.id}}">Leer m√°s</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <h5>Acciones urgentes</h5>
  <ul class="collapsible popout" data-collapsible="accordion">
    {% for accion in acciones | slice(0, 3) %}
      <li>
        <div class="collapsible-header green-text">{{accion.titulo|upper}}</div>
        <div class="collapsible-body"><p><span class="grey-text darken-4">{{accion.fecha|date('d M Y')}}</span> <br>{{accion.texto}}</p></div>
      </li>
    {% endfor %}
 </ul>
</div>
{% endblock content %}
